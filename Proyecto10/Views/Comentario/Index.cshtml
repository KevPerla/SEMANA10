@model List<Proyecto10.Models.ComentarioModel>

@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <title>Formulario de Comentario</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .form-container {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
            }

            .form-group.required:after {
                content: "* Campo obligatorio";
                color: red;
            }

        .btn-container {
            text-align: right;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h3>BlogPost</h3>
            @using (Html.BeginForm("Enviar", "Comentario", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
            {
                <div class="row">
                    <div class="col">
                        <div class="form-group required">
                            @Html.TextBox("Nombre", null, new { @class = "form-control", placeholder = "Nombre", required = "required" })
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            @Html.TextBox("Email", null, new { @class = "form-control", placeholder = "Email" })
                        </div>
                    </div>
                </div>
                <div class="form-group required">
                    @Html.TextBox("Titulo", null, new { @class = "form-control", placeholder = "Título", required = "required" })
                </div>
                <div class="form-group required">
                    @Html.TextArea("Comentario", null, new { @class = "form-control", rows = 4, placeholder = "Comentario", required = "required" })
                </div>
                <div class="btn-container">
                    <button type="submit" class="btn btn-primary">Enviar datos</button>
                </div>
            }
        </div>
    </div>
</body>
</html>